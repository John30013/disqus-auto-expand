{
  "manifest_version": 2,
  "name": "Disqus Auto Expander",
  "version": "0.1",
  "description": "Automatically shows all replies (including new replies) and media items",
  "permissions": [
    "*://*/*",
    "activeTab", 
    "declarativeContent",
    "storage"
  ],
    "background": {
      "scripts": ["defaultConfig.js", "background.js"],
      "persistent": false
    },
    "content_scripts": [
    {
      "matches": ["*://disqus.com/embed/comments/*"],
      "all_frames": true,
      "js": ["defaultConfig.js", "content.js"]
    }
  ],
  "icons": {
    "16": "images/disqus_eye_16.png",
    "32": "images/disqus_eye_32.png",
    "48": "images/disqus_eye_48.png",
    "128": "images/disqus_eye_128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "images/disqus_eye_16.png",
      "32": "images/disqus_eye_32.png",
      "48": "images/disqus_eye_48.png",
      "128": "images/disqus_eye_128.png"
    },
    "default_popup": "config.html",
    "default_title": "Disqus Auto Expander"
  }
}