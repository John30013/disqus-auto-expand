{
  "manifest_version": 2,
  "name": "Disqus Auto Expander",
  "version": "0.3",
  "description": "Automatically shows all replies in Disqus discussions. Optionally shows new comments, prevents auto-play media, and forces URLs to open in a new tab/window.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["dax-defaultConfig.js", "dax-background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://disqus.com/embed/comments/*",
        "*://disqus.com/home/discussion/*"
      ],
      "all_frames": true,
      "js": ["dax-defaultConfig.js", "dax-content.js"]
    },
    {
      "matches": ["*://cdn.embedly.com/widgets/media.html*"],
      "all_frames": true,
      "js": ["dax-defaultConfig.js", "dax-stopAutoPlay.js"]
    }
  ],
  "icons": {
    "16": "images/disqus_eye_16.png",
    "32": "images/disqus_eye_32.png",
    "48": "images/disqus_eye_48.png"
  },
  "options_ui": {
    "page": "dax-config.html"
  },
  "page_action": {
    "default_icon": {
      "16": "images/disqus_eye_16.png",
      "32": "images/disqus_eye_32.png"
    },
    "default_popup": "dax-config.html",
    "default_title": "Disqus Auto Expander"
  }
}
